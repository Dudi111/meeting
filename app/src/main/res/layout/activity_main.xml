<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schdule meeting"
        android:padding="30dp"
        android:layout_marginLeft="50dp"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmeet"
        android:text="Name"
        android:layout_marginLeft="40dp"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:text="Nrupul Dev"
        android:drawableBottom="@drawable/ic_line_1__2_"
        android:textColor="#000000"
        android:id="@+id/tvnrupul"
        android:layout_marginLeft="40dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnrupul"
        android:text="Tue-22 December 2020"
        android:textSize="20sp"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_rectangle_1"
        android:padding="10dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:30am"
        android:layout_toEndOf="@+id/tvdate"
        android:layout_below="@+id/tvnrupul"
        android:textSize="20sp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:layout_marginLeft="19dp"
        android:background="@drawable/ic_rectangle_2"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/tvdate" />
    <TextView
        android:id="@+id/tvinvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People to Invite"
        android:layout_below="@+id/tvdate"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/tvprateek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prateek"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/tvinvite"
        android:drawableBottom="@drawable/ic_line_1__2_"
        android:drawableRight="@drawable/ic_ei_search"/>
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/prateek_sukla1"
        android:layout_below="@+id/tvprateek"
        android:padding="20dp" />
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jeff_bezos1"
        android:layout_below="@+id/tvprateek"
        android:padding="20dp"
        android:layout_toEndOf="@+id/iv1"
        android:layout_toRightOf="@+id/iv1" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_1"
        android:layout_below="@+id/iv2"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/tvblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prateek shukla"
        android:layout_below="@+id/iv1"
        android:drawableLeft="@drawable/prateek_sukla1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:drawableRight="@drawable/vector" />


    <TextView
        android:id="@+id/tvline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:drawableBottom="@drawable/ic_line_1__2_"
        android:layout_below="@+id/tvblue"/>
    <TextView
        android:id="@+id/tvjeff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeff bezos"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_below="@+id/tvline2"
        android:drawableLeft="@drawable/jeff_bezos1"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp" />

</LinearLayout>
    <TextView
        android:id="@+id/tvnotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify people on slack"
        android:layout_below="@+id/ll"
        android:textColor="@color/black"
        android:padding="25dp"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:drawableEnd="@drawable/group"
        android:drawableRight="@drawable/group" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create meeting"
        android:layout_below="@+id/tvnotify"
        android:textSize="20sp"
        android:layout_marginLeft="80dp"
        android:padding="20dp"
        android:background="@drawable/ic_rectangle_1"
        android:gravity="center"
        android:backgroundTint="#8095FF"/>







</RelativeLayout>